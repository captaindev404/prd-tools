# Database
DATABASE_URL="file:./dev.db"

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
# In production, use a strong random secret
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-development-secret-change-in-production"

# Azure AD Provider (for Club Med employees)
# Get these from Azure Portal > App registrations
AZURE_AD_CLIENT_ID="your-azure-ad-client-id"
AZURE_AD_CLIENT_SECRET="your-azure-ad-client-secret"
AZURE_AD_TENANT_ID="your-azure-ad-tenant-id"

# Keycloak Provider (alternative SSO)
# Get these from your Keycloak admin console
KEYCLOAK_CLIENT_ID="your-keycloak-client-id"
KEYCLOAK_CLIENT_SECRET="your-keycloak-client-secret"
KEYCLOAK_ISSUER="https://your-keycloak-domain/realms/your-realm"

# SendGrid Email Configuration
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL="noreply@gentil-feedback.com"
SENDGRID_FROM_NAME="Gentil Feedback"

# HRIS Integration (optional)
# Configure these to sync employee data from your HRIS system
HRIS_API_URL=""
HRIS_API_KEY=""
HRIS_SYNC_ENABLED=false            # Enable automatic HRIS syncing
HRIS_SYNC_TYPE="incremental"       # "full" or "incremental"

# Cron Job Security
# Generate a secret for cron job authentication
CRON_SECRET=""

# Jira Integration (optional)
# For Jira link validation and issue fetching
JIRA_BASE_URL="https://jira.company.com"
JIRA_API_USER=""
JIRA_API_TOKEN=""

# App URLs
# Used for generating links in emails and notifications
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Session Encryption
# Generate a key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Used for encrypting sensitive research session notes (AES-256-GCM)
SESSION_ENCRYPTION_KEY=""

# AI/ML Configuration (TASK-061, TASK-066)
# OpenAI API for categorization, sentiment, duplicate detection, and transcription
OPENAI_API_KEY=""                     # Get from: https://platform.openai.com/api-keys
AI_ENABLED=false                      # Enable AI features (categorization, sentiment, duplicates)
AI_MODEL="gpt-4o-mini"               # Model for chat completions (gpt-4o-mini, gpt-4, gpt-3.5-turbo)
AI_CATEGORIZATION_ENABLED=false       # Auto-categorize feedback on submission
AI_SENTIMENT_ENABLED=false            # Analyze sentiment of feedback
AI_DUPLICATE_DETECTION_ENABLED=false  # Semantic duplicate detection using embeddings
AI_CONFIDENCE_THRESHOLD=0.6           # Minimum confidence to apply AI suggestions (0-1)

# Recording & Transcription (TASK-066)
# S3-compatible storage for session recordings
RECORDING_STORAGE_PROVIDER="minio"    # minio | cloudflare-r2 | aws-s3 | backblaze-b2
RECORDING_STORAGE_ENDPOINT=""         # S3 endpoint URL (e.g., https://s3.amazonaws.com)
RECORDING_STORAGE_REGION="us-east-1"  # Storage region
RECORDING_STORAGE_BUCKET="session-recordings"  # Bucket name
RECORDING_STORAGE_ACCESS_KEY=""       # Access key ID
RECORDING_STORAGE_SECRET_KEY=""       # Secret access key
RECORDING_STORAGE_PUBLIC_URL=""       # Optional: Public URL for direct access
RECORDING_TRANSCRIPTION_ENABLED=false # Enable automatic transcription (requires OPENAI_API_KEY)

# Feature Flags
# Enable/disable features across the application
# All flags default to false for safety
ENABLE_ATTACHMENTS=false              # Allow users to attach files to feedback
ENABLE_IMAGE_COMPRESSION=false        # Automatically compress uploaded images
ENABLE_VIRUS_SCAN=false               # Scan uploaded files for viruses (requires ClamAV)
ENABLE_DUPLICATE_DETECTION=false      # Detect and suggest duplicate feedback
ENABLE_EMAIL_NOTIFICATIONS=false      # Send email notifications to users
ENABLE_RESEARCH_PANELS=false          # Enable research panels and user testing
ENABLE_MODERATION=false               # Enable content moderation and PII redaction
ENABLE_ANALYTICS=false                # Track user actions for analytics

# Development Notes:
# - Copy this file to .env and fill in your actual values
# - Never commit .env to version control
# - In development, you can use the credentials provider with test accounts
# - For production, configure proper OAuth providers with real credentials
# - SendGrid emails are logged to console in development mode (NODE_ENV=development)
# - HRIS sync uses mock data if HRIS_API_URL is not configured
# - Feature flags: Set to 'true' to enable features, any other value disables them
